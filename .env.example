# Email Subscription Manager Configuration
# Copy this to .env and customize as needed

# Database settings
DATABASE_URL=sqlite:///email_subscriptions.db

# Email scanning settings  
DEFAULT_SCAN_DAYS=30
DEFAULT_BATCH_SIZE=50
MAX_BODY_LENGTH=10000

# IMAP connection settings
IMAP_TIMEOUT=30

# Future unsubscribe settings
REQUEST_TIMEOUT=10
MAX_RETRIES=3
RATE_LIMIT_DELAY=1.0

# Security settings
VERIFY_SSL=true

# Data directory (where database and logs are stored)
# DATA_DIR=./data